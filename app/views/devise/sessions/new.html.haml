.row
  .col-md-4.col-md-offset-4
    %h2 Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f|
      %section.form-group= f.email_field :email, placeholder: 'Email', class: 'form-control', autofocus: true
      %section.form-group= f.password_field :password, placeholder: 'Password', class: 'form-control', autocomplete: "off"
      - if devise_mapping.rememberable?
        %section.form-group
          = f.check_box :remember_me
          = f.label :remember_me
      .row
        .col-md-4.col-md-offset-4
          = f.submit "Log in", class: 'btn btn-primary btn-block'
          %br/
    = render "devise/shared/links"
