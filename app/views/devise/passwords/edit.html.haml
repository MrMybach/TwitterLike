.row
  .col-md-4.col-md-offset-4
    %h3 Change your password
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form' }) do |f|
      = devise_error_messages!
      %section.form-group= f.hidden_field :reset_password_token
      %section.form-group= f.password_field :password, autofocus: true, placeholder: 'Enter new password', class: 'form-control', autocomplete: "off"
      %section.form-group= f.password_field :password_confirmation, placeholder: 'Confirm password', class: 'form-control', autocomplete: "off"
      .row
        .col-md-6.col-md-offset-3
          = f.submit 'Change my password', class: 'btn btn-primary btn-block'
          %br/
    = render "devise/shared/links"
