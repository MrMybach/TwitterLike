.row
  .col-md-4.col-md-offset-4
    %h3 Forgot your password?
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form' }) do |f|
      = devise_error_messages!
      %section.form-group= f.email_field :email, autofocus: true, placeholder: 'Enter your email', class: 'form-control'
      .row
        .col-md-10.col-md-offset-1
          = f.submit "Send me reset password instructions", class: 'btn btn-primary btn-block'
          %br/
    = render "devise/shared/links"
