.row
  .col-md-4.col-md-offset-4
    %h2 Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      %section.form-group= f.email_field :email, autofocus: true, placeholder: 'Enter your email', class: 'form-control'
      %section.form-group
        - if @validatable
          %small.text-muted
            (#{@minimum_password_length} characters minimum)
        = f.password_field :password, autocomplete: "off", placeholder: 'Create password', class: 'form-control'
      %section.form-group= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm password', class: 'form-control'
      .row
        .col-md-4.col-md-offset-4
          = f.submit "Sign up", class: 'btn btn-primary btn-block'
          %br/
    = render "devise/shared/links"
