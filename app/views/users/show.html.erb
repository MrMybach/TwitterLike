<div class="row">
	<div class="col-md-8 col-md-offset-1">
		<h2>You are waching <span class="text-info"><%= @user.email %></span> Tweets</h2>
		<hr>
	</div>
</div>
<div class="row">
	<div class="col-md-6 col-md-offset-1">
		<% @user.posts.each do |post| %>
			<div class="post ">
				<h2><%= post.title %></h2>
				<small> <%= post.created_at.strftime("%d %b %Y") %></small>
				<p><%= post.text %></p>
			</div>
			<hr>
		<% end %>
	</div>
</div>