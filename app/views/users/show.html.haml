.row
  .col-md-8.col-md-offset-1
    %h2
      = image_tag @user.avatar.url(:thumb), class: 'img-circle'
      You are waching
      %span.text-info
        - if @user.first_name && @user.last_name
          = @user.full_name
        - else
          = @user.email
      Tweets
    %hr/
.row
  .col-md-6.col-md-offset-1
    - @user.posts.each do |post|
      .post.well.well-sm
        %small
          = post.created_at.strftime("%d %b %Y")
        %p= post.text
        %section
        = link_to "Retweet", retweet_post_path(post), method: :post, class: 'retweet-js'
    = paginate @user_posts
